@model ProductDto


@{
    ViewData["Title"] = "Details";
}


<form method="post" action="details">
    <div class=" pt-4">
        <input asp-for="ProductId" hidden />
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header bg-success text-light row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-light">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-warning"> @Model.Price.ToString("c")</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="https://placehold.co/603x403" style="border-radius:35px;" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">

                                <div class="col-12">
                                    <span class="badge bg-success text-light  p-3 border">@Model.CategoryName</span>
                                    <p class="text-secondary pt-3">@Model.Description</p>
                                </div>
                            </div>
                            <div class="row mx-0">
                                <input class="form-control" asp-for="Count" />
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row bg-light">
                <div class="col-12 col-md-6 pb-1 ">
                    <a class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                </div>
                <div class="col-12 col-md-6 ">
                    <button type="submit" class="btn btn-secondary form-control btn-lg" style="height:50px;">Add to Cart</button>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
