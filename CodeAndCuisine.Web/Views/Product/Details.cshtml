@model CodeAndCuisine.Web.Models.ProductDto

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-bg-info">Details</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ProductId
        </dt>
        <dd class="col-sm-10">
            @Model.ProductId
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Category Name
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class="col-sm-2">
            Image Url
        </dt>
        <dd class="col-sm-10">
            @Model.ImageUrl
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id=@Model.ProductId>Edit</a>
    <a class="btn btn-success" asp-action="index">Back to List</a>
</div>
