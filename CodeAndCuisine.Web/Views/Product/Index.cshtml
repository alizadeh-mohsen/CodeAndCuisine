@model IEnumerable<CodeAndCuisine.Web.Models.ProductDto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-bg-success">Products List</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Description

            </th>
            <th>
                Category Name
            </th>
            <th>
                Image Url
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Name
                </td>
                <td>
                    @((item.Price).ToString("c"))
                </td>
                <td>
                    @item.Description.Substring(0,50)...
                </td> 
                <td>
                    @item.CategoryName
                </td> 
                <td>
                    <img src="@item.ImageUrl" width="90" height="64" alt="image" />
                </td>
                <td>
                    <a class="btn btn-info" asp-route-id=@item.ProductId asp-action="Details">Details</a>
                    <a class="btn btn-warning" asp-route-id=@item.ProductId asp-action="Edit">Edit</a>
                    <a class="btn btn-danger" asp-route-id=@item.ProductId asp-action="Delete">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
